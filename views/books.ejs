<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Könyvek</title>
</head>
<body>
    <h1>Könyvek Listája</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Cím</th>
                <th>Szerző</th>
                <th>ISBN</th>
                <th>Kiadási év</th>
                <th>Foglalt</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.id %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.isbn %></td>
                    <td><%= book.publishYear %></td>
                    <td><%= book.reserved ? 'Igen' : 'Nem' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
